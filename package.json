{
  "name": "freeplay",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "tvos": "expo run:ios --device \"Living Room\"",
    "web": "expo start --web",
    "prebuild": "expo prebuild --clean",
    "build:android": "eas build --platform android --clear-cache",
    "build:amazon": "eas build --platform android --profile amazon --clear-cache",
    "build:tvos": "eas build --platform ios --profile tvos-production",
    "update": "eas update --branch production"
  },
  "dependencies": {
    "@churchapps/content-provider-helper": "^0.1.0",
    "@churchapps/helpers": "1.2.9",
    "@expo/metro-runtime": "~6.1.1",
